#!/bin/bash

alias rm='rm -v'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=always'
alias l='ls -CF --color=always --group-directories-first'
alias l.='ls -ldF.* --color=auto --group-directories-first'
alias la='ls -AlF --color=always --group-directories-first'
alias lal='ls -AlF --color=always --group-directories-first | less'
alias lal='ls -AlF --color=always --group-directories-first | less -R'
alias ll='ls -lF --color=always --group-directories-first'
alias ls='ls --color=auto --group-directories-first'
alias lz='ls -AlFZ --color=always --group-directories-first'
alias mc='. /usr/libexec/mc/mc-wrapper.sh'
alias mountt='mount | column -t'
alias src='source /home/ebeale/.bashrc'
alias vi='vim'
alias which='(alias; declare -f) | /usr/bin/which --tty-only --read-alias --read-functions --show-tilde --show-dot'
alias xzegrep='xzegrep --color=auto'
alias xzfgrep='xzfgrep --color=auto'
alias xzgrep='xzgrep --color=auto'
alias zegrep='zegrep --color=auto'
alias zfgrep='zfgrep --color=auto'
alias zgrep='zgrep --color=auto'
alias sigrok='sigrok-cli'
alias histc='history -c'
alias vmlist='vmanage list vms'
alias vmlistl='vmanage list --long vms | less'
alias vminfo='vmanage showvminfo --machinereadable'
alias vmmod='vmanage modifyvm'
alias vmclone='vmanage clonevm'
alias vmimport='vmanage import'
alias vmstart='vmanage startvm --type gui'
alias vmstarth='vmanage startvm --type headless'
alias vmanagehelp='vboxmanage --help | less'
alias ytdl='/usr/bin/youtube-dl'
alias pp='pushd'
alias p='popd'
alias xbox='mpw -tx -c2 xbox.com'
